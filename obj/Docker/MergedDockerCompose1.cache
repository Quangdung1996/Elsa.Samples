services:
  elsa.samples:
    build:
      context: C:\Users\admin\source\repos\Elsa.Samples
      dockerfile: Elsa.Samples/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: elsasamples
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\admin\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\admin\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  mongodb:
    image: mongo
    ports:
    - published: 27017
      target: 27017
  smtp4dev:
    image: rnwood/smtp4dev:linux-amd64-3.1.0-ci0856
    ports:
    - published: 2525
      target: 25
    - published: 3000
      target: 80
version: '3.7'