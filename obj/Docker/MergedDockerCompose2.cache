services:
  elsa.samples:
    build:
      context: C:\Users\admin\source\repos\Elsa.Samples
      dockerfile: Elsa.Samples/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Elsa.Samples
      target: base
    container_name: Elsa.Samples
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: elsasamples:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  ""'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    - target: 443
    tty: true
    volumes:
    - C:\Users\admin\source\repos\Elsa.Samples\Elsa.Samples:/app:rw
    - C:\Users\admin\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\admin\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\admin\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - C:\Users\admin\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\admin\source\repos\Elsa.Samples:/src:rw
  mongodb:
    image: mongo
    ports:
    - published: 27017
      target: 27017
  smtp4dev:
    image: rnwood/smtp4dev:linux-amd64-3.1.0-ci0856
    ports:
    - published: 2525
      target: 25
    - published: 3000
      target: 80
version: '3.7'